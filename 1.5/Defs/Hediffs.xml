          <MedicalTendQuality>2</MedicalTendQuality>
          <PlantHarvestYield>1.5</PlantHarvestYield>
          <RangedCooldownFactor>0.7</RangedCooldownFactor>
        </statFactors>
        <painOffset>-0.1</painOffset>
        <statOffsets>
          <SM_BodySizeOffset MayRequire="RedMattis.BetterPrerequisites">0.2</SM_BodySizeOffset>
        </statOffsets>
      </li>
      <li>
        <label>supreme</label>
        <minSeverity>1.49</minSeverity>
        <regeneration>600</regeneration>
        <statFactors>
          <WorkSpeedGlobal>6</WorkSpeedGlobal>
          <ImmunityGainSpeed>3</ImmunityGainSpeed>
          <MoveSpeed>1.25</MoveSpeed>
          <CarryingCapacity>1.32</CarryingCapacity>
          <IncomingDamageFactor>0.45</IncomingDamageFactor>
