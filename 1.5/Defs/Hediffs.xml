    <validWhileDespawned>true</validWhileDespawned>
    <developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
    <stages>
      <li>
        <label>strained connection</label>
        <description>The gauranlen tree is suffering.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
      <li>
        <label>gauranlen connection</label>
        <description>The gauranlen tree is doing alright.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
      <li>
        <label>gauranlen peace</label>
        <description>The gauranlen tree is doing well.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
      <li>
        <label>gauranlen harmony</label>
        <description>The gauranlen tree is doing great.</description>
