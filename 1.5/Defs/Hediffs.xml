<Defs>
  <HediffDef>
    <defName>Dryad_Hediff</defName>
    <label>gauranlen bond</label>
    <description>The dryad draws its power from a Gauranlen tree.</description>
    <isBad>false</isBad>
    <stages>
      <li>
        <label>weakened</label>
        <minSeverity>0</minSeverity>
        <statFactors>
          <WorkSpeedGlobal>0.75</WorkSpeedGlobal>
          <MoveSpeed>0.5</MoveSpeed>
          <RestFallRateFactor>2</RestFallRateFactor>
          <MeleeDamageFactor>0.75</MeleeDamageFactor>
        </statFactors>
      </li>
      <li>
        <!-- <label>normal</label> -->
        <minSeverity>0.1</minSeverity>
        <regeneration>25</regeneration>
      </li>
      <li>
        <label>potent</label>
        <minSeverity>0.74</minSeverity>
        <regeneration>100</regeneration>
        <statFactors>
          <WorkSpeedGlobal>2</WorkSpeedGlobal>
          <ImmunityGainSpeed>1.5</ImmunityGainSpeed>
          <MoveSpeed>1.1</MoveSpeed>
          <IncomingDamageFactor>0.8</IncomingDamageFactor>
          <RestFallRateFactor>0.5</RestFallRateFactor>
          <MeleeDamageFactor>1.2</MeleeDamageFactor>
        </statFactors>
      </li>
      <li>
        <label>overpowering</label>
        <minSeverity>0.9</minSeverity>
        <regeneration>250</regeneration>
        <statFactors>
          <WorkSpeedGlobal>4</WorkSpeedGlobal>
          <ImmunityGainSpeed>3</ImmunityGainSpeed>
          <MoveSpeed>1.2</MoveSpeed>
          <IncomingDamageFactor>0.5</IncomingDamageFactor>
          <RestFallRateFactor>0</RestFallRateFactor>
          <MeleeDamageFactor>1.5</MeleeDamageFactor>
        </statFactors>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>Dryad_ConnectedHediff</defName>
    <label>gauranlen connection</label>
    <description>This person has a connection to a Gauranlen tree.\n\nThe consciousness bonus scales with pruning ability.</description>
    <hediffClass>Dryad.DryadConnectionHediff</hediffClass>
    <isBad>false</isBad>
    <stages>
      <li>
        <label>strained</label>
        <minSeverity>0</minSeverity>
        <painOffset>0.05</painOffset>
      </li>
      <li>
        <minSeverity>0.08</minSeverity>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.24</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.025</postFactor>
          </li>
        </capMods>
        <capacityFactorEffectMultiplier>PruningSpeed</capacityFactorEffectMultiplier>
      </li>
      <li>
        <label>aligned</label>
        <minSeverity>0.49</minSeverity>
        <hungerRateFactor>0.9</hungerRateFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.05</postFactor>
          </li>
        </capMods>
        <capacityFactorEffectMultiplier>PruningSpeed</capacityFactorEffectMultiplier>
      </li>
      <li>
        <label>resonant</label>
        <minSeverity>0.74</minSeverity>
        <hungerRateFactor>0.8</hungerRateFactor>
        <naturalHealingFactor>1.5</naturalHealingFactor>
        <statFactors>
          <ImmunityGainSpeed>1.1</ImmunityGainSpeed>
          <RestRateMultiplier>1.2</RestRateMultiplier>
        </statFactors>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.075</postFactor>
          </li>
        </capMods>
        <capacityFactorEffectMultiplier>PruningSpeed</capacityFactorEffectMultiplier>
      </li>
      <li>
        <label>avatar</label>
        <minSeverity>0.9</minSeverity>
        <regeneration>100</regeneration>
        <hungerRateFactor>0.5</hungerRateFactor>
        <naturalHealingFactor>2</naturalHealingFactor>
        <totalBleedFactor>0.5</totalBleedFactor>
        <statFactors>
          <ImmunityGainSpeed>1.5</ImmunityGainSpeed>
          <RestRateMultiplier>2</RestRateMultiplier>
        </statFactors>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <postFactor>1.1</postFactor>
          </li>
        </capMods>
        <capacityFactorEffectMultiplier>PruningSpeed</capacityFactorEffectMultiplier>
      </li>
    </stages>
  </HediffDef>
</Defs>