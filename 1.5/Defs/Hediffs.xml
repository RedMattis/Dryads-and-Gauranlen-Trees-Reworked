          <MedicalTendQuality>2.1</MedicalTendQuality>
          <PlantHarvestYield>1.6</PlantHarvestYield>
          <RangedCooldownFactor>0.6</RangedCooldownFactor>
        </statFactors>
        <painOffset>-0.11</painOffset>
        <statOffsets>
          <SM_BodySizeOffset MayRequire="RedMattis.BetterPrerequisites">0.25</SM_BodySizeOffset>
        </statOffsets>
      </li>
      <li>
        <label>gauranlen embodiment</label>
        <minSeverity>1.74</minSeverity>
        <regeneration>1600</regeneration>
        <statFactors>
          <WorkSpeedGlobal>12</WorkSpeedGlobal>
          <ImmunityGainSpeed>4</ImmunityGainSpeed>
